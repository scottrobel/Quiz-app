<%= link_to "<< Other Responses", quiz_responses_path(@response.quiz.id) %>
<h1>Quiz: <%= @response.quiz.title %></h1>
<div>User: <%= link_to "#{@user.email}", user_path(@user.id)%></div>
<% @question_answer_pairs.each do |question, answer_array| %>
  <h3>Question Type: <%= question.question_type.split('_').join(' ') %></h3>
  <h3>Question Title: <%= question.contents %></h3>
  <ul>
    <% answer_array.each do |answer| %>
      <li><%= answer.contents %></li>
    <% end %>
  </ul>
<% end %>