<div class="form-container">
  <%= form_for @quiz, url:  quiz_compass_photo_path(@quiz), method: "put" do |f| %>
  <div class="top-message"><%= @quiz.title %></div>
    <% if @quiz.compass.attached?%>
      <%= f.label "Current Compass" %>
      <%= image_tag(url_for(@quiz.compass), class: "compass-form-icon") %>
      <%= link_to "Change back to default Compass photo", quiz_compass_photo_path(@quiz, @quiz.compass.id), method: :delete, class: "form-submit-button"%>
    <% end %>
    <%= f.label "Compass Photo (optional)" %>
    <%= f.file_field :compass%>
    <%= f.submit "Upload Compass Photo" %>
    <%= f.submit "Continue" %>
  <% end %>
</div>